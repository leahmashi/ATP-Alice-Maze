<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="650.0" prefWidth="900.0" stylesheets="@../CSSs/MainStyle.css" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.controllers.MyViewController">
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="generateMaze" onAction="#generateMaze" prefHeight="60.0" prefWidth="130.0" text="Generate Maze" BorderPane.alignment="BOTTOM_LEFT">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
            <Button fx:id="solveMaze" cancelButton="true"  prefHeight="60.0" prefWidth="130.0" text="Solve Maze" BorderPane.alignment="BOTTOM_RIGHT">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
        </HBox>
    </bottom>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button text="File" prefWidth="60.0"/>
                    </graphic>
                    <MenuItem mnemonicParsing="false" text="New" onAction="#createNewFile"/>
                    <MenuItem mnemonicParsing="false" text="Save" onAction="#saveFile"/>
                    <MenuItem mnemonicParsing="false" text="Load" onAction="#loadFile"/>
                </Menu>
                <Menu mnemonicParsing="false" >
                    <graphic>
                        <Button text="Options" prefWidth="60.0"/>
                    </graphic>
                    <MenuItem mnemonicParsing="false" text="Properties" onAction="#showProperties"/>
                </Menu>
<!--                <Menu mnemonicParsing="false" text="Settings" onAction="#showSettings" />-->
                <Menu>
                    <graphic>
                        <Button text="Settings" onAction="#showSettings" prefWidth="60.0"/>
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false" >
                    <graphic>
                        <Button text="Help" onAction="#showHelp" prefWidth="60.0"/>
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button text="About" onAction="#showAbout" prefWidth="60.0"/>
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false" >
                    <graphic>
                        <Button text="Exit" onAction="#exitProgram" prefWidth="60.0"/>
                    </graphic>
                </Menu>
            </MenuBar>
        </VBox>
    </top>
</BorderPane>
