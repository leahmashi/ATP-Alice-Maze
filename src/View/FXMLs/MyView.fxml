<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../CSSs/MainStyle.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.controllers.MyViewController"
            prefHeight="650.0" prefWidth="900.0">
    <bottom>
        <HBox alignment="CENTER" spacing="10" fillHeight="true" >
            <Button fx:id="generateMaze" onAction="#generateMaze" prefHeight="60.0" prefWidth="130.0" text="Generate Maze" HBox.hgrow="ALWAYS" BorderPane.alignment="BOTTOM_LEFT"/>
            <Button fx:id="solveMaze" cancelButton="true" prefHeight="60.0" prefWidth="130.0" text="Solve Maze" HBox.hgrow="ALWAYS" BorderPane.alignment="BOTTOM_RIGHT"/>
        </HBox>
    </bottom>
    <top>
        <VBox BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS" fillWidth="true">
            <MenuBar>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button prefWidth="60.0" text="File" />
                    </graphic>
                    <MenuItem mnemonicParsing="false" onAction="#createNewFile" text="New" />
                    <MenuItem disable="true" mnemonicParsing="false" text="Save" />
                    <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load" />
                </Menu>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button prefWidth="60.0" text="Options" />
                    </graphic>
                    <MenuItem mnemonicParsing="false" onAction="#showProperties" text="Properties" />
                </Menu>
                <Menu>
                    <graphic>
                        <Button onAction="#showSettings" prefWidth="60.0" text="Settings" />
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button onAction="#showHelp" prefWidth="60.0" text="Help" />
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button onAction="#showAbout" prefWidth="60.0" text="About" />
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button onAction="#exitProgram" prefWidth="60.0" text="Exit" />
                    </graphic>
                </Menu>
            </MenuBar>
        </VBox>
    </top>
</BorderPane>
