<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="View.controllers.MyViewController" stylesheets="@../CSSs/MainStyle.css">
    <BorderPane prefHeight="650.0" prefWidth="900.0">
        <bottom>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="generateMaze" onAction="#generateMaze" prefHeight="60.0" prefWidth="130.0"
                        text="Generate Maze"/>
                <Button fx:id="solveMaze" cancelButton="true" prefHeight="60.0" prefWidth="130.0" text="Solve Maze"/>
            </HBox>
        </bottom>
        <top>
            <VBox BorderPane.alignment="CENTER">
                <MenuBar>
                    <Menu mnemonicParsing="false">
                        <graphic>
                            <Button prefWidth="60.0" text="File"/>
                        </graphic>
                        <MenuItem mnemonicParsing="false" onAction="#createNewFile" text="New"/>
                        <MenuItem mnemonicParsing="false" text="Save" disable="true"/>
                        <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load"/>
                    </Menu>
                    <Menu mnemonicParsing="false">
                        <graphic>
                            <Button prefWidth="60.0" text="Options"/>
                        </graphic>
                        <MenuItem mnemonicParsing="false" onAction="#showProperties" text="Properties"/>
                    </Menu>
                    <Menu>
                        <graphic>
                            <Button onAction="#showSettings" prefWidth="60.0" text="Settings"/>
                        </graphic>
                    </Menu>
                    <Menu mnemonicParsing="false">
                        <graphic>
                            <Button onAction="#showHelp" prefWidth="60.0" text="Help"/>
                        </graphic>
                    </Menu>
                    <Menu mnemonicParsing="false">
                        <graphic>
                            <Button onAction="#showAbout" prefWidth="60.0" text="About"/>
                        </graphic>
                    </Menu>
                    <Menu mnemonicParsing="false">
                        <graphic>
                            <Button onAction="#exitProgram" prefWidth="60.0" text="Exit"/>
                        </graphic>
                    </Menu>
                </MenuBar>
            </VBox>
        </top>
    </BorderPane>
</AnchorPane>
