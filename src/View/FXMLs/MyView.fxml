<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="650.0" prefWidth="900.0" stylesheets="@../CSSs/MainStyle.css" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.controllers.MyViewController">
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#generateMaze" prefHeight="60.0" prefWidth="130.0" text="Generate Maze" BorderPane.alignment="BOTTOM_LEFT">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
            <Button cancelButton="true" onAction="#solveMaze" prefHeight="60.0" prefWidth="130.0" text="Solve Maze" BorderPane.alignment="BOTTOM_RIGHT">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
        </HBox>
    </bottom>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar>
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" text="New"/>
                    <MenuItem mnemonicParsing="false" text="Save"/>
                    <MenuItem mnemonicParsing="false" text="Load"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Options">
                    <MenuItem mnemonicParsing="false" text="Properties"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Help"/>
                <Menu mnemonicParsing="false" text="About"/>
                <Menu mnemonicParsing="false" text="Exit"/>
            </MenuBar>
        </VBox>
    </top>
</BorderPane>
