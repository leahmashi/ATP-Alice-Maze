<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import View.MazeDisplayer?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../CSSs/MazeStyle.css" fx:controller="View.controllers.MazeViewController">
    <bottom>
        <HBox alignment="CENTER" spacing="10" fillHeight="true" >
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="60.0" prefWidth="130.0"
                    onAction="#returnToMain" BorderPane.alignment="BOTTOM_LEFT" fx:id="returnToMain" HBox.hgrow="ALWAYS">
                <graphic>
                    <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                          prefHeight="60.0" prefWidth="130.0">
                        <Label text="return to" fx:id="returnTo">
                            <VBox.margin>
                                <Insets top="10.0" left="30.0"/>
                            </VBox.margin>
                        </Label>
                        <Label text="main window" fx:id="mainWindow">
                            <VBox.margin>
                                <Insets left="20.0"/>
                            </VBox.margin>
                        </Label>
                    </VBox>
                </graphic>
                <HBox.margin>
                    <Insets bottom="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="solveMaze" onAction="#solveMaze" prefHeight="60.0" prefWidth="130.0" text="Solve Maze" HBox.hgrow="ALWAYS" BorderPane.alignment="BOTTOM_RIGHT">
                <HBox.margin>
                    <Insets bottom="10.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
    <center>
        <ScrollPane BorderPane.alignment="CENTER" fx:id="pane" pannable="true" hbarPolicy="ALWAYS" vbarPolicy="ALWAYS" >
            <MazeDisplayer fx:id="mazeDisplayerFXML" height="575.0" width="900.0" imageFileNamePlayer="./resources/images/pawn-right.jpg"
                           imageFileNameWall="./resources/images/bush-green.jpg" imageFileNameSol="./resources/images/Rose.jpg"
                           imageFileNameEndPoint="./resources/images/queen-left.jpg" onScroll="#zoom" onMouseClicked="#mouseClicked"
                           onKeyPressed="#keyPressed">
            </MazeDisplayer>
        </ScrollPane>
    </center>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button text="File" prefWidth="60.0"/>
                    </graphic>
                    <MenuItem mnemonicParsing="false" text="New" onAction="#createNewFile"/>
                    <MenuItem mnemonicParsing="false" text="Save" onAction="#saveFile"/>
                    <MenuItem mnemonicParsing="false" text="Load" onAction="#loadFile"/>
                </Menu>
                <Menu mnemonicParsing="false" >
                    <graphic>
                        <Button text="Options" prefWidth="60.0"/>
                    </graphic>
                    <MenuItem mnemonicParsing="false" text="Properties" onAction="#showProperties"/>
                </Menu>
                <Menu>
                    <graphic>
                        <Button text="Settings" onAction="#showSettings" prefWidth="60.0"/>
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false" >
                    <graphic>
                        <Button text="Help" onAction="#showHelp" prefWidth="60.0"/>
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <Button text="About" onAction="#showAbout" prefWidth="60.0"/>
                    </graphic>
                </Menu>
                <Menu mnemonicParsing="false" >
                    <graphic>
                        <Button text="Exit" onAction="#exitProgram" prefWidth="60.0"/>
                    </graphic>
                </Menu>
            </MenuBar>
        </VBox>
    </top>
</BorderPane>




